doctype html
html(language=en)
    head
        title Android or IOS?
        link(rel='stylesheet', href='../stylesheets/style.css', type='text/css' )
        link(rel="stylesheet", href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css", integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7", crossorigin="anonymous")
        link(rel="stylesheet", href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap-theme.min.css", integrity="sha384-fLW2N01lMqjakBkx3l/M9EahuwpSfeNvV63J5ezn3uZzapT0u7EYsXMjQV+0En5r", crossorigin="anonymous")
        script(src="https://code.jquery.com/jquery-2.2.4.js", integrity="sha256-iT6Q9iMJYuQiMWNd9lDyBUStIq/8PuOW33aOqmvFpqI=", crossorigin="anonymous")
        script(src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js", integrity="sha384-0mSbJDEHialfmuBBQP6A4Qrprq5OVfW37PRR3j5ELqxss1yVqOtnepnHVP9aJ7xS", crossorigin="anonymous")
    body
        .container
            .jumbotron
                h1 Android or IOS?
            .row
                .col-lg-3
                .col-lg-3
                    .progress.progress-bar-vertical
                        .progress-bar.progress-bar-info(style="height:" + votes.android.percentage + "%;") ANDROID - #{votes.android.percentage}%
                .col-lg-3.center-block
                    .progress.progress-bar-vertical
                        .progress-bar.progress-bar-success(style="height:" + votes.ios.percentage + "%;") IOS - #{votes.ios.percentage}%
            .row
                .col-lg-3
                .col-lg-3
                    a(href="/vote/android")
                        button.btn.btn-success(type="button") Vote for android
                .col-lg-3
                    a(href="/vote/ios")
                        button.btn.btn-success(type="button") Vote for ios
